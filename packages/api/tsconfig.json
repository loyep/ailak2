{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "jsx": "preserve",
    "plugins": [{ "name": "next" }],
    "incremental": true,
    "baseUrl": "../core",
    "paths": {
      "@/*": ["../core/src/*"],
      "@public/*": ["../core/public/*"]
    }
  },
  "include": [
    "../core/.eslintrc.cjs",
    "../core/next-env.d.ts",
    "../core/**/*.ts",
    "../core/**/*.tsx",
    "../core/**/*.cjs",
    "../core/**/*.js",
    "../core/.next/types/**/*.ts"
  ],
  "exclude": ["../core/node_modules"]
}
